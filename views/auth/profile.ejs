<div>
    <!-- Profile Content -->
    <% if (typeof profile !=='undefined' && profile.length> 0) { %>
        <ul class="list-group">
            
            <% profile.forEach(function(request) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>
                        <%= request.groupName %>
                    </span>
                    <div>
                        <form action="/chat/groups/accept/<%= request.id %>" method="POST"
                            class="d-inline">
                            <button class="btn btn-success btn-sm" type="submit">Accept</button>
                        </form>
                        <form action="/chat/groups/decline/<%= request.id %>" method="POST"
                            class="d-inline">
                            <button class="btn btn-danger btn-sm" type="submit">Decline</button>
                        </form>
                    </div>
                </li>
                <% }) %>
        </ul>
        <% } else { %>
            <p>No group requests.</p>
            <% } %>
</div>